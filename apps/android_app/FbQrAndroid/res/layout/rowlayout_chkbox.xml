<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"  android:layout_width="wrap_content" android:layout_height="wrap_content"  android:gravity="center_vertical">
	<ImageView android:id="@+id/icon" android:layout_height="wrap_content" android:layout_marginTop="4px" android:layout_marginRight="4px" android:layout_marginLeft="4px" android:layout_width="50px" layout_height="50px" android:src="@drawable/name" android:layout_alignParentLeft="true" >
		</ImageView>
